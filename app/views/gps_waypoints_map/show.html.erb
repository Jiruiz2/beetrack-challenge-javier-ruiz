<h1> Beetrack Challenge Javier Ruiz </h1>

<div id="mapid" style='width: 800px; height: 400px;'></div>

<script type="text/javascript">
  const waypoints = <%= raw @gps_waypoints %>
  var mymap;
  if (waypoints.length > 0) {
    mymap = L.map('mapid').setView([waypoints[0]['latitude'], waypoints[0]['longitude']], 5);
  } else {
    mymap = L.map('mapid').setView([-33.4594048, -70.7243994], 5); 
  }
  
  L.tileLayer('https://api.mapbox.com/styles/v1/{id}/tiles/{z}/{x}/{y}?access_token={accessToken}', {
      attribution: 'Map data &copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors, Imagery Â© <a href="https://www.mapbox.com/">Mapbox</a>',
      maxZoom: 18,
      id: 'mapbox/streets-v11',
      tileSize: 512,
      zoomOffset: -1,
      accessToken: '<%= ENV.fetch('LEAFLET_ACCESS_TOKEN') %>'
  }).addTo(mymap);

  waypoints.forEach(waypoint => {
    L.marker([waypoint['latitude'], waypoint['longitude']])
                                .addTo(mymap).bindPopup(waypoint['vehicle_identifier']);
  });
</script>
